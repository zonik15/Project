<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shadow" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".Main" >
        <LinearLayout
            android:id="@+id/ll_dentist"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="#008444">
            <TextView
                android:id="@+id/tv_dentist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DENTAL CLINICS"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:gravity="center"/>
        </LinearLayout>
          <EditText
            android:id="@+id/et_dentist"
            android:layout_below="@+id/ll_dentist"
            android:layout_width="match_parent"
            android:layout_height="50dp"
              android:paddingLeft="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="#6d6767"
            android:background="@drawable/shadow"
              android:hint="Search" />
          <ListView 
              android:id="@+id/lv_dentist"
              android:layout_below="@+id/et_dentist"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="#6d6767"></ListView>

    </RelativeLayout>
    </RelativeLayout>