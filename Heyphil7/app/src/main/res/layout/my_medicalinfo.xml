<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shadow">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="#008444">
        <TextView
            android:id="@+id/tv_medical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LATEST APE"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:gravity="center"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/first"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_dateofavailment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Availment:"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#008444"
            />
        <TextView
            android:id="@+id/dateofavailment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="January 1, 2016"
            android:textColor="#6d6767"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/tv_dateofavailment"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_placeofservice"
            android:layout_below="@+id/tv_dateofavailment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place of Service:"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#008444"
            />
        <TextView
            android:id="@+id/placeofservice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PhilCare Makati"
            android:textColor="#6d6767"
            android:layout_toRightOf="@+id/tv_placeofservice"
            android:layout_marginTop="5dp"
            android:layout_below="@id/dateofavailment"
            android:layout_alignLeft="@id/dateofavailment"/>
        <TextView
            android:id="@+id/tv_aperesult"
            android:layout_below="@+id/tv_placeofservice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APE Result:"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#008444"
            />
        <TextView
            android:id="@+id/aperesult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal"
            android:textColor="#6d6767"
            android:layout_toRightOf="@+id/tv_aperesult"
            android:layout_marginTop="5dp"
            android:layout_below="@id/placeofservice"
            android:layout_alignLeft="@id/dateofavailment"/>

        <TextView
            android:id="@+id/tv_urinalysis"
            android:layout_below="@+id/aperesult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urinalysis :"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#008444"
            />

        <TextView
            android:id="@+id/urinalysis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None"
            android:textColor="#6d6767"
            android:layout_toRightOf="@+id/tv_urinalysis"
            android:layout_marginTop="5dp"
            android:layout_below="@id/aperesult"
            android:layout_alignLeft="@id/dateofavailment"/>
        <TextView
            android:id="@+id/tv_ecg"
            android:layout_below="@+id/tv_urinalysis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ECG:"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#008444"
            />

        <TextView
            android:id="@+id/ecg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None"
            android:textColor="#6d6767"
            android:layout_toRightOf="@+id/tv_ecg"
            android:layout_marginTop="5dp"
            android:layout_below="@id/urinalysis"
            android:layout_alignLeft="@id/dateofavailment" />
        <TextView
            android:id="@+id/tv_xray"
            android:layout_below="@+id/tv_ecg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X-Ray:"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#008444"
            />

        <TextView
            android:id="@+id/xray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_xray"
            android:layout_marginTop="5dp"
            android:layout_below="@id/ecg"
            android:layout_alignLeft="@id/dateofavailment"
            android:text="None"
            android:textColor="#6d6767"/>
        <TextView
            android:id="@+id/tv_ultrasound"
            android:layout_below="@+id/tv_xray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ultrasound:"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#008444"
            />

        <TextView
            android:id="@+id/ultrasound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_ultrasound"
            android:layout_marginTop="5dp"
            android:layout_below="@id/xray"
            android:layout_alignLeft="@id/dateofavailment"
            android:text="None"
            android:textColor="#6d6767"/>
    </RelativeLayout>
</RelativeLayout>
