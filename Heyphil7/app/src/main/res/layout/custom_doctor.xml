<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shadow" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".Main" >

        <TextView
            android:id="@+id/tv_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#008444"
            android:text="List of Doctors"
            android:textSize="20sp"/>
          <EditText
            android:id="@+id/et_doctor"
            android:layout_below="@+id/tv_doctor"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
              android:paddingLeft="10dp"
              android:textColor="#6d6767"
            android:hint="Search Doctor"
              android:background="@drawable/shadow"
              android:layout_toLeftOf="@+id/btn_search"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:layout_below="@+id/tv_doctor"
            android:layout_alignRight="@+id/tv_doctor"
            android:layout_alignEnd="@+id/tv_doctor"
            android:id="@+id/btn_search" />

          <ListView 
              android:id="@+id/lv_Doctor"
              android:layout_below="@+id/et_doctor"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textColor="#6d6767"></ListView>

    </RelativeLayout>
    </RelativeLayout>