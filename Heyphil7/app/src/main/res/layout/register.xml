<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="#008444">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTRATION"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:gravity="center"/>
    </LinearLayout>
    <ScrollView
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
        android:id="@+id/facebook"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/facebook"
        android:layout_marginBottom="15dp"
        android:textSize="15sp"
        android:gravity="center"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:text="Continue with Facebook  "
        android:textColor="@color/white"
        android:background="@drawable/fb"/>
    <TextView
        android:id="@+id/tv_skip"
        android:layout_below="@+id/facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"
        android:textSize="12sp"
        android:text="OR"/>
    <RelativeLayout
        android:id="@+id/info"
        android:layout_below="@+id/tv_skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/shadow"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/returnmessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message"
            android:padding="5dp"
            android:gravity="center"
            android:background="@color/red"
            android:textColor="@color/white"
            android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/name"
        android:layout_below="@+id/returnmessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_firstname"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:inputType="textCapCharacters"
            android:layout_weight="0.4"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:textColor="#6d6767"
            android:hint="First Name"
            android:background="@drawable/shadow"/>
        <EditText
            android:id="@+id/et_lastname"
        android:layout_width="fill_parent"
            android:inputType="textCapCharacters"
            android:layout_height="35dp"
        android:layout_weight="0.4"
            android:textColor="#6d6767"
            android:layout_margin="5dp"
            android:padding="5dp"
        android:hint="Last Name"
        android:background="@drawable/shadow"/>
        <EditText
            android:id="@+id/et_mi"
            android:layout_width="fill_parent"
            android:inputType="textCapCharacters"
            android:layout_height="35dp"
            android:layout_weight="0.6"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:hint="MI"
            android:textColor="#6d6767"
            android:background="@drawable/shadow"/>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/address"
            android:layout_below="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_bldg_no"
                android:layout_width="fill_parent"
                android:layout_weight="0.6"
                android:inputType="textCapCharacters"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@drawable/shadow"
                android:hint="Bldg No."/>
            <EditText
                android:id="@+id/et_street"
                android:layout_width="fill_parent"
                android:layout_weight="0.6"
                android:inputType="textCapCharacters"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@drawable/shadow"
                android:hint="Street"/>
            <EditText
                android:id="@+id/et_brgy"
                android:layout_width="fill_parent"
                android:layout_weight="0.5"
                android:inputType="textCapCharacters"
                android:layout_height="35dp"
                android:textAllCaps="true"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@drawable/shadow"
                android:hint="Brgy"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/address1"
            android:layout_below="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_city"
                android:layout_width="fill_parent"
                android:layout_weight="0.5"
                android:layout_height="35dp"
                android:inputType="textCapCharacters"
                android:textAllCaps="true"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@drawable/shadow"
                android:hint="City"/>
            <EditText
                android:id="@+id/et_province"
                android:layout_width="fill_parent"
                android:layout_weight="0.5"
                android:inputType="textCapCharacters"
                android:layout_height="35dp"
                android:textAllCaps="true"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="@drawable/shadow"
                android:hint="Province"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/homecontact"
            android:layout_below="@+id/address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_homecontact"
                android:textColor="#6d6767"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:inputType="phone"
                android:maxLength="11"
                android:hint="Home Number"
                android:background="@drawable/shadow"/>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/contact"
        android:layout_below="@+id/homecontact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_contact"
            android:textColor="#6d6767"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:inputType="phone"
            android:maxLength="11"
            android:hint="Mobile Number"
            android:background="@drawable/shadow"/>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/email"
            android:layout_below="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_email"
                android:textColor="#6d6767"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:inputType="textEmailAddress"
                android:hint="Email Account"
                android:background="@drawable/shadow"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/password"
            android:layout_below="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_password"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:textColor="#6d6767"
                android:layout_weight="0.5"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:hint="Password"
                android:background="@drawable/shadow"/>
            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="fill_parent"
                android:textColor="#6d6767"
                android:layout_height="35dp"
                android:layout_weight="0.5"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:hint="Confirm Password"
                android:background="@drawable/shadow"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/button"
            android:layout_below="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:text="Cancel"
                android:background="@drawable/custombutton"/>
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:text="Submit"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/custombutton"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/success"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone">
        <ImageView
            android:id="@+id/circularImageView"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/checks" />
        <TextView
            android:id="@+id/tv_message"
            android:layout_below="@+id/circularImageView"
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            android:textColor="#008444"
            android:text="Message here!"
            android:gravity="center"/>

    </RelativeLayout>
    <TextView
        android:layout_width="84dp"
        android:layout_height="27.5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/send_message_layout"
        android:background="@drawable/philcarelogo"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
