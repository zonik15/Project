<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/myacc"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:id="@+id/first"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_originaleffectivedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Original Effectivity Date:"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#008444"
            />
        <TextView
            android:id="@+id/originaleffectivedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None"
            android:textColor="#6d6767"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/tv_originaleffectivedate"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_preexisting"
            android:layout_below="@+id/tv_originaleffectivedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pre Existing:"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#008444"
            />
        <TextView
            android:id="@+id/preexisting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None"
            android:textColor="#6d6767"
            android:layout_toRightOf="@+id/tv_preexisting"
            android:layout_marginTop="5dp"
            android:layout_below="@id/originaleffectivedate"
            android:layout_alignLeft="@id/originaleffectivedate"/>
        <TextView
            android:id="@+id/tv_opemergency"
            android:layout_below="@+id/tv_preexisting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OP Emergency:"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#008444"
            />
        <TextView
            android:id="@+id/opemergency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None"
            android:textColor="#6d6767"
            android:layout_toRightOf="@+id/tv_opemergency"
            android:layout_marginTop="5dp"
            android:layout_below="@id/preexisting"
            android:layout_alignLeft="@id/originaleffectivedate"/>

        <TextView
            android:id="@+id/tv_oplimit"
            android:layout_below="@+id/tv_opemergency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OP Limit :"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#008444"
            />

        <TextView
            android:id="@+id/oplimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None"
            android:textColor="#6d6767"
            android:layout_toRightOf="@+id/tv_oplimit"
            android:layout_marginTop="5dp"
            android:layout_below="@id/opemergency"
            android:layout_alignLeft="@id/originaleffectivedate"/>
        <TextView
            android:id="@+id/tv_opmed"
            android:layout_below="@+id/tv_oplimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OP Medicine:"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#008444"
            />

        <TextView
            android:id="@+id/opmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None"
            android:textColor="#6d6767"
            android:layout_toRightOf="@+id/tv_opmed"
            android:layout_marginTop="5dp"
            android:layout_below="@id/oplimit"
            android:layout_alignLeft="@id/originaleffectivedate" />
        <TextView
            android:id="@+id/tv_hospital"
            android:layout_below="@+id/tv_opmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital:"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#008444"
            />

        <TextView
            android:id="@+id/hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_hospital"
            android:layout_marginTop="5dp"
            android:layout_below="@id/opmed"
            android:layout_alignLeft="@id/originaleffectivedate"
            android:text="None"
            android:textColor="#6d6767"/>
        <TextView
            android:id="@+id/tv_philhealth"
            android:layout_below="@+id/tv_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PhilHealth:"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#008444"
            />

        <TextView
            android:id="@+id/philhealth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_philhealth"
            android:layout_marginTop="5dp"
            android:layout_below="@id/hospital"
            android:layout_alignLeft="@id/originaleffectivedate"
            android:text="None"
            android:textColor="#6d6767"/>
    </RelativeLayout>
</RelativeLayout>
