<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/heyphil"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#008444"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="HEYPHIL"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="@color/white"/>

   <!--     <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@null"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/heyphil_title" />-->
    </LinearLayout>

    <ListView
        android:layout_below="@+id/header"
        android:id="@+id/listView"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/send_message_layout"
        android:divider="@null"/>
    <TextView
        android:layout_width="84dp"
        android:layout_height="27.5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/send_message_layout"
        android:background="@drawable/philcarelogo"/>

    <LinearLayout
        android:id="@+id/send_message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/chat_layout"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:transcriptMode="alwaysScroll"
        android:stackFromBottom="true">

        <EditText
            android:id="@+id/et_message"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:hint="Type"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:imeOptions="actionDone"
            android:background="@drawable/shadow"/>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/btn_send"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/microphone"
            android:layout_alignParentRight="true"
            app:civ_border="true"
            app:civ_border_color="#008444"
            app:civ_border_width="2dp"
            android:layout_marginRight="10dp"
            app:civ_shadow_radius="0" />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/llMainContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context=".ChatBubbleActivity"
        android:orientation="vertical">
    </LinearLayout>

</RelativeLayout>
