<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@null"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/heyphil_title" />
    </LinearLayout>
<ScrollView
    android:layout_below="@+id/title"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/registration_title"/>
        <TextView
            android:id="@+id/tv_cert_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:text="@string/string_label_cert_no"
            android:textColor="@color/display_text_color" />

        <EditText
            android:id="@+id/et_cert_no"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="text"
            android:maxLength="20"
            android:singleLine="true"
            android:textAllCaps="true"
            android:background="@drawable/shadow"
            android:textColor="@color/edit_text_color" />

        <TextView
            android:id="@+id/tv_home_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:text="@string/string_label_home_address"
            android:textColor="@color/display_text_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/et_bldg_no"
                    android:paddingLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPersonName|textCapCharacters"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:background="@drawable/shadow"
                    android:textColor="@color/edit_text_color" />

                <TextView
                    android:id="@+id/tv_bldg_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/string_label_bldg_no"
                    android:textColor="@color/display_text_color"
                    android:textSize="@dimen/small_txt_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/et_street"
                    android:paddingLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPersonName|textCapCharacters"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:background="@drawable/shadow"
                    android:textColor="@color/edit_text_color" />

                <TextView
                    android:id="@+id/tv_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/string_label_street"
                    android:textColor="@color/display_text_color"
                    android:textSize="@dimen/small_txt_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/et_brgy"
                    android:paddingLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPersonName|textCapCharacters"
                    android:maxLength="60"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:background="@drawable/shadow"
                    android:textColor="@color/edit_text_color" />

                <TextView
                    android:id="@+id/tv_brgy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/string_label_brgy"
                    android:textColor="@color/display_text_color"
                    android:textSize="@dimen/small_txt_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/et_city"
                    android:paddingLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPersonName|textCapCharacters"
                    android:maxLength="60"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:background="@drawable/shadow"
                    android:textColor="@color/edit_text_color" />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/string_label_city"
                    android:textColor="@color/display_text_color"
                    android:textSize="@dimen/small_txt_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/et_province"
                    android:paddingLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPersonName|textCapCharacters"
                    android:maxLength="60"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:background="@drawable/shadow"
                    android:textColor="@color/edit_text_color" />

                <TextView
                    android:id="@+id/tv_province"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/string_label_province"
                    android:textColor="@color/display_text_color"
                    android:textSize="@dimen/small_txt_size" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_home_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:text="@string/string_label_home_no"
            android:textColor="@color/display_text_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2" >

            <EditText
                android:id="@+id/et_home_country_code"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.4"
                android:clickable="false"
                android:cursorVisible="false"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="none"
                android:maxLength="3"
                android:singleLine="true"
                android:text="@string/string_default_country_code"
                android:background="@drawable/shadow"
                android:textColor="@color/edit_text_color" />

            <EditText
                android:id="@+id/et_local_no"
                android:paddingLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.4"
                android:inputType="phone"
                android:maxLength="3"
                android:singleLine="true"
                android:textAllCaps="true"
                android:background="@drawable/shadow"
                android:textColor="@color/edit_text_color" />

            <EditText
                android:id="@+id/et_home_no"
                android:paddingLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1.2"
                android:inputType="phone"
                android:maxLength="7"
                android:singleLine="true"
                android:textAllCaps="true"
                android:background="@drawable/shadow"
                android:textColor="@color/edit_text_color" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_mobile_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:text="@string/string_label_mobile_no"
            android:textColor="@color/display_text_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_country_code"
                android:paddingLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.4"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="none"
                android:maxLength="3"
                android:singleLine="true"
                android:text="@string/string_default_country_code"
                android:background="@drawable/shadow"
                android:textColor="@color/edit_text_color" />

            <EditText
                android:id="@+id/et_mobile_no"
                android:paddingLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1.6"
                android:inputType="phone"
                android:maxLength="10"
                android:singleLine="true"
                android:background="@drawable/shadow"
                android:textColor="@color/edit_text_color" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_birthdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:focusable="false"
            android:inputType="none"
            android:text="@string/string_label_birthdate"
            android:textColor="@color/display_text_color" />

        <EditText
            android:id="@+id/et_birthdate"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="date"
            android:singleLine="true"
            android:background="@drawable/shadow"
            android:textColor="@color/edit_text_color" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:text="@string/string_label_email"
            android:textColor="@color/display_text_color" />

        <EditText
            android:id="@+id/et_email"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            android:singleLine="true"
            android:background="@drawable/shadow"
            android:textColor="@color/edit_text_color" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:focusable="false"
            android:inputType="none"
            android:text="@string/string_label_username"
            android:textColor="@color/display_text_color" />

        <EditText
            android:id="@+id/et_username"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="text"
            android:maxLength="20"
            android:singleLine="true"
            android:background="@drawable/shadow"
            android:textColor="@color/edit_text_color" />

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:text="@string/string_label_password"
            android:textColor="@color/display_text_color" />

        <EditText
            android:id="@+id/et_password"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPassword"
            android:maxLength="20"
            android:singleLine="true"
            android:background="@drawable/shadow"
            android:textColor="@color/edit_text_color" />

        <TextView
            android:id="@+id/tv_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:text="@string/string_label_confirm_password"
            android:textColor="@color/display_text_color" />

        <EditText
            android:id="@+id/et_confirm_password"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="20"
            android:singleLine="true"
            android:background="@drawable/shadow"
            android:textColor="@color/edit_text_color" />

        <LinearLayout
            android:id="@+id/layout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/cb_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/display_text_color"
                android:background="@drawable/shadow"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_btn_t_and_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_text_t_and_c"
                android:textColor="@color/display_text_color"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_main1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <View
                android:id="@+id/buttons_spacer_left"
                android:layout_width="0dip"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/custombutton"
                android:padding="0dp"
                android:text="@string/string_btn_submit"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/custombutton"
                android:padding="0dp"
                android:text="@string/string_btn_cancel"
                android:textColor="@color/white" />

            <View
                android:id="@+id/buttons_spacer_right"
                android:layout_width="0dip"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
</RelativeLayout>