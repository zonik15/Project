<?xml version="1.0" encoding="utf-8"?>
<com.applause.android.dialog.LoginErrorBox xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/applause_login_error_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/applause_login_error_box_background"
    android:padding="10dp"
    android:visibility="gone"
    tools:visibility="visible">

    <TextView
        style="@style/applause_login_error_box_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/applause_login_error_box_title"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/applause_login_error_text"
        style="@style/applause_login_error_box_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="4dp"
        tools:text="Here comes the error code With very very very long text." />

    <TextView
        android:id="@+id/applause_login_error_close"
        style="@style/applause_login_error_box_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="X" />

</com.applause.android.dialog.LoginErrorBox>