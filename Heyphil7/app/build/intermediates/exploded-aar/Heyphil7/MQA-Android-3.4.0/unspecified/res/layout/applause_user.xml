<?xml version="1.0" encoding="utf-8"?>
<com.applause.android.ui.UserListAdapterRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/applause_login_quick_list_selector"
    android:orientation="horizontal"
    tools:background="@color/applause_login_body_background">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="-4dp"
        android:duplicateParentState="true"
        android:focusable="false"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">


        <com.applause.android.ui.RoundImageView
            android:id="@+id/applause_user_avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:duplicateParentState="true"
            android:focusable="false"
            android:gravity="center"
            android:padding="12dp"
            android:src="@drawable/applause_avatar" />

    </FrameLayout>

    <TextView
        android:id="@+id/applause_user_name"
        style="@style/applause_login_quick_auth_row"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:duplicateParentState="true"
        android:focusable="false"
        android:gravity="left|center_vertical"
        tools:text="User name" />


</com.applause.android.ui.UserListAdapterRow>