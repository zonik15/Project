<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:color="@color/applause_falcon_light_tint_80" android:width="1dp"/>
            <solid android:color="@color/applause_editor_menu_label_background_pressed" />
            <corners android:radius="@dimen/applause_editor_label_background_radius" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:color="@color/applause_falcon_light_tint_80" android:width="1dp"/>
            <solid android:color="@color/applause_editor_menu_label_background_normal" />
            <corners android:radius="@dimen/applause_editor_label_background_radius" />
        </shape>
    </item>
</selector>